author:              Alexander Vershilov
maintainer:          alexander.vershilov@sirius.online
copyright:           (C) 2019-2020 Фонд "Талант и Успех"
category:            System
build-type:          Simple

executable Main
  main-is: Main.hs
  default-language: Haskell2010
  build-depends:
      base >= 4.11 && <5
    , cheops-logger
    , cheops-logger:metrics-prometheus
  ghc-options: -Wall -Werror

